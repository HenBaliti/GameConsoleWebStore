@model GameConsuleWebStore.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOrder)
        </dd>
    </dl>

    <dl>
        <dd class="col-sm-12">
            <b>Product You Have Ordered : </b> 
        </dd>
    </dl>
    <div class="row">
        @foreach (var item in Model.ProductOrders)
        {
            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.ProductId">
                <div class="col-md-4">
                    <!-- Box -->
                    <div class="box">
                        <div class="imageContainer">
                            <div class="image">
                                <img class="imgViewGameIndex" src="~/images/@Html.DisplayFor(model => item.Product.pathPicture)" />
                            </div>
                        </div>
                                    @Html.DisplayFor(model => item.Product.Name) <b>  |  </b>
                                    @Html.DisplayFor(model => item.Product.Price)$

                    </div>
                </div>
                </a>
                }

        </div>

</div>
